#include <iostream>
#include <vector>
#include <algorithm>

using namespace std;

int main() {
    int t;
    cin >> t;

    while (t--) {
        int n;
        cin >> n;

        vector<int> signs(n);
        for (int i = 0; i < n; ++i) {
            cin >> signs[i];
        }

        sort(signs.begin(), signs.end());

        int year = 1;
        for (int i = 0; i < n; ++i) {
            year = max(year + 1, (year / signs[i] + 1) * signs[i]);
        }

        cout << year << endl;
    }

    return 0;
}
